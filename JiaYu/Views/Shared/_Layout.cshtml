    <nav class="navbar navbar-default navbar-trans navbar-expand-lg fixed-top">
        <div class="container">
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
                    aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a class="navbar-brand text-brand" href="@Url.Action("Index","Home")">嘉裕<span class="color-b">Apple旗艦館</span></a>
           
            <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index","Home")"><i class="fab fa-apple"></i></a>
                    </li>
                    @foreach (var module in AppService.GetModuleList())
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @module.ca_name
                            </a>
                            @if (AppService.GetProgramlist(module.cate_id).Count > 0)
                            {
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @foreach (var prg in AppService.GetProgramlist(module.cate_id))
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Category","Home", new { id = prg.cate_id})">@prg.ca_name</a>
                                        
                                    }
                                </div>
                            }
                        </li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            會員中心
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                            @if (UserAccount.Role.Equals(EnumList.LoginRole.Guest))
                            {

                                <a class="dropdown-item" href="@Url.Action("Login","User")">登入</a>
                                <a class="dropdown-item" href="@Url.Action("Register","User")">註冊</a>
                            }
                            else
                            {
                                <a class="dropdown-item" href="@Url.Action("Logout","User")">登出</a>
                                @Html.ActionLink("未結訂單管理", "Index", "User", new { id = 0, code = 0 }, new { @class = "dropdown-item" })
                                @Html.ActionLink("歷史訂單查詢", "index", "User", new { id = 0, code = 1 }, new { @class = "dropdown-item" })
                                @Html.ActionLink("會員資料維護", "Edit", "User", new { uid = UserAccount.user_id }, new { @class = "dropdown-item" })
                                @Html.ActionLink("修改密碼", "ResetPassword", "User", null, new { @class = "dropdown-item" })
                            }
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("CartList","Shopping")">購物車(@Cart.Counts)</a>
                    </li>
                    @if (UserAccount.Role.Equals(EnumList.LoginRole.User))
                    {
                        <li class="nav-item">
                            Hi! @UserAccount.user_id 您好!
                        </li>
                    }
                </ul>


            </div>
      
        </div>
