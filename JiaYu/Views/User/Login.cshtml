@model JiaYu.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "會員登入";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!--/ Services Star /-->
    <section class="section-services section-t8">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-wrap d-flex justify-content-between">
                        <div class="title-box">
                            <h2 class="title-a">會員登入</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 offset-md-2">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.user_id, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.passwd, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.passwd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.passwd, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="登入系統" class="btn btn-primary" />
                            @Html.ActionLink("註冊帳號", "Register", "User", null, new { @class = "btn btn-success" })
                            @Html.ActionLink("忘記密碼", "Forget", "User", null, new { @class = "btn btn-info" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!--/ Services End /-->
}
